<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Registration Form in HTML CSS</title>
    <!---Custom CSS File--->
    <link rel="stylesheet" href="../assets/newcss/style.css" />
  </head>
  <body>
    <section class="container">
      <header>Register</header>
      <form action="/register" method="POST" class="form">
        <div class="input-box">
          <label>Pharmacy Name</label>
          <input type="text" name="Pharmacy_name" placeholder="Enter name" required />
        </div>

        <div class="input-box">
          <label>Email Address</label>
          <input type="text" name="email" placeholder="Enter email address" required />
        </div>

        <div class="column">
          <div class="input-box">
            <label>Phone Number</label>
            <input type="number" name="Telephone" placeholder="Enter phone number" required />
          </div>
          <div class="input-box">
            <label>Location</label>
            <input type="text" name="Location" placeholder="Location" required />
          </div>
        </div>
        <div class="gender-box">
          <h3>Pharmacy Type</h3>
          <div class="gender-option">
            <div class="gender">
              <input type="radio" name="RetailPharmacy"    />
              <label for="check-male">Retail Pharmacy</label>
            </div>
            <div class="gender">
              <input type="radio" name="WholesalePharmacy"   />
              <label for="check-female">Wholesale Pharmacy</label>
            </div>
            <div class="gender">
              <input type="radio" id="check-other" name="prefernotto" />
              <label for="check-other">prefer not to say</label>
            </div>
          </div>
        </div>
        <div class="input-box address">
          <label>Username</label>
          <input type="text" name="Username" placeholder="username" required />
          
          <div class="column">
            <input type="text" name="Conutry" placeholder="Enter Country" required />
            <input type="text" name="city" placeholder="Enter City" required />
          </div>
          <div class="column">
            <input type="password" name="password" placeholder="Enter Password" required />
            <input type="password" name="Confirmpassword" placeholder="Repeat Password" required />
          </div>
        </div>
        <button type="submit">Create account</button>
      </form>
    </section>
  </body>
</html>
